<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:id="@+id/editing_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6204BF"
                android:padding="18sp">

                <TextView
                    android:id="@+id/name_text_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Edit information"
                    android:fontFamily="@font/amaranth"

                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/image_edit"

                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_below="@id/name_text_edit"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/ic_launcher_background" />

                <EditText
                    android:id="@+id/name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_edit"
                    android:hint="Name"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/amaranth"

                    android:textColorHint="@android:color/white" />

                <EditText
                    android:id="@+id/quantity_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_edit"
                    android:hint="Quantity"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/amaranth"

                    android:textColorHint="@android:color/white" />

                <EditText
                    android:id="@+id/weight_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/quantity_edit"
                    android:hint="Weight ( In kg)"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/amaranth"

                    android:textColorHint="@android:color/white"

                    />

                <EditText
                    android:id="@+id/size_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weight_edit"
                    android:hint="Size ( In cm)"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/amaranth"

                    android:textColorHint="@android:color/white" />

                <TextView
                    android:id="@+id/edit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/size_edit"
                    android:text="Price: "
                    android:layout_margin="20dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/amaranth"
                    android:textColor="@android:color/white"

                    />

                <Button
                    android:id="@+id/apply_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_price"
                    android:layout_marginTop="18sp"
                    android:background="#3F007E"
                    android:shadowColor="@android:color/white"
                    android:text="Apply"
                    android:fontFamily="@font/amaranth"

                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>


</LinearLayout>